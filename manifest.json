{
    "name": "RabbitBeGone!",
    "description": "No going down that rabbit hole for you",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": [
        "history",
        "activeTab",
        "tabs",
        "storage"
    ],

    "background": {
        "service_worker": "background.js", 
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["inject.js"]
        }
    ],

    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "assets/logo2.png"
    }
}