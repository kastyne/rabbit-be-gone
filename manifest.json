{
    "name": "Roadwork in Wonderland",
    "description": "No going down that rabbit hole for you",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": [
        "history",
        "activeTab",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["inject.js"]
        }
    ],

    "action": {
        "default_popup": "popup/index.html"
    }
}